= image_tag 'login-page-top-view.png', class: 'top-view-image'
.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field.login_form
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, class: "form_area"
    .field
      = f.label :password
      %br/
      = f.password_field :password, class: "form_area"
    .links
      = render "devise/shared/links"
    .actions
      = f.submit "Log in" , class: "button submit_button"

