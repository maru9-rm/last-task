= image_tag 'login-page-top-view.png', class: 'top-view-image'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.login_form
      = f.label :user_name
      %br/
      = f.text_field :user_name, autofocus: false, autocomplete: "user_name", class: "form_area"
    .field.login_form
      = f.label :email
      %br/
      = f.email_field :email, autofocus: false, autocomplete: "email", class: "form_area"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "form_area"
    .links
      = render "devise/shared/links"
    .actions
      = f.submit "Sign up", class: "button submit_button"
