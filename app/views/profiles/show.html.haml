.countainer
    .user-name
        = @user.user_name



    .avatar-wrapper
        = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
            %div
                = f.label :avatar, 'アバター' do
                    = image_tag @user.profile.avatar, class: 'avatar-image', class: "avatar-image center-position"
            %div
                = f.file_field :avatar ,class: "hidden uploader"
    
            = f.submit '決定', class: 'btn-primary hidden submit-botton'
                